<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chanproject.fastlms.admin.mapper.CategoryMapper">


    <select id="select" resultType="com.chanproject.fastlms.admin.dto.CategoryDto">

            select c.*
            , (select count(*) from course where category_id = c.id) as course_count
            from category c
            where using_yn = 1
            order by sort_value desc
    </select>
</mapper>